<%- include('../partials/header.ejs') %>
    <div class="d-flex flex-row">
        <div class="card ms-3 mt-3 px-3 table-responsive d-none d-sm-block">
            <h5 class="mt-3">Trending Clucks</h5>
            <table class="table table-sm text-center">
                <thead>
                    <tr>
                        <th scope="col">#tag</th>
                        <th scope="col">number</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const [key, value] of Object.entries(tag)) { %>
                        <tr>
                            <td>
                                <%- key %>
                            </td>
                            <td>
                                <%- value %>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <div class="ms-3 mt-3">
            <% for(let cluck of clucks){ %>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="card-body d-flex flex-row align-items-start">
                        <img src="../../images/rooster.png" class="img-fluid rounded me-2" alt="..." width="60"
                            height="60">
                        <div class="flex-grow-1">
                            <h5 class="card-title d-flex flex-row justify-content-between">
                                <%- cluck.username %>
                                    <small class="text-muted">
                                        <%- cluck.readTime %>
                                    </small>
                            </h5>
                            <p class="card-text">
                                <%-cluck.content %>
                            </p>
                            <% if(cluck.image_url){ %>
                                <img src="<%-cluck.image_url%> " class="img-fluid" alt="cluck image">
                                <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>